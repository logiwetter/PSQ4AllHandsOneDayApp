<TemplateModifier>

	<!-- Visual Gallery button -->
	<SetAttribute XPath="//Action[@AddPanelPopupCaption]" AddPanelPopupCaption="Add to Visual Gallery" />
	<SetAttribute XPath="//Label[@Caption='Add to Dashboard']" Caption="Add to Visual Gallery" Tooltip="Save this for use in Dashboards and Reports" />
	<SetAttribute ID="lblAddToDashboard" Class="ThemeLinkButton" />

	<!-- Remove spaces after chart titles -->
	<RemoveElement XPath="//Label[@Class='rdAgContentHeading']/following-sibling::Spaces"/>

	<!-- Disable original report LinkBack. -->
	<RemoveElement XPath="//BookmarkLinkback"/>

</TemplateModifier>